<% @years.each do |y| %>
<div class="calander year<%= y.name %>">
  
    <div class="year yeartitle<%= y.name %>"><%= y.name %></div>
    <ul><% y.months.each do |m| %>
      <m><h1><%= m.nam %></h1>
        
        <div class="form">
          <% ass = Assignment.where(year_id: y.id).find_by_month_id(m.id) %>
	  <%= form_for @user do |f| %>
	  <%= f.hidden_field :assignment_id, :value => ass.id %>
	  <%= f.text_field :name %>
          <%= f.submit %>
          <% end %>    
        </div>
	
	  <% count = 0 %>
	  <% m.users.each do |u| %>
		  <% count = count + 1%>
		  <% if count > 3 %>
			<% if count == 4 %>
			  <li class="ellipse">...</li>
			<% end %>
			<li class="extra_names"><%= u.name %></li>
		  <% else %>
			<li><%= u.name %>
			<%= link_to 'Destroy',  { action: :destroy, id: u.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
			</li>
		  <% end %>
          
          <% end %>
	
      </m>
      <% end %>
    </ul>
  </div>
  <% end %>
<div class="input"></div>
 



